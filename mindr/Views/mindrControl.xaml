<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:mindr.Views"
             xmlns:ViewModels="clr-namespace:mindr.ViewModels" x:Class="mindr.Views.mindrControl"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.DataContext>
        <ViewModels:Presenter/>
    </UserControl.DataContext>
    <StackPanel>
        <Label>Waiting Reminders</Label>
        <ListBox MinHeight="2" ItemsSource="{Binding Reminders}" Height="95" DisplayMemberPath="Title" SelectionChanged="ListBox_SelectionChanged"/>
        <Button Command="{Binding AddReminderCommand, Mode=OneWay}">Add New Reminder</Button>
        <Button Command="{Binding RemoveReminderCommand, Mode=OneWay}">Delete Selected Reminder</Button>
        <Label>Title</Label>
        <TextBox Name="minderTitle" Text="{Binding Selected.Title}"/>
        <Label>Message</Label>
        <TextBox Name="minderMessage" Text="{Binding Selected.Message}"/>
        <DatePicker SelectedDate="{Binding Selected.Due}"/>
    </StackPanel>
</UserControl>
